    var clearDateFilters = function(filterName) {
      if (filterName == '#clear-answer-filter') {
        $('#date-for-answer input[type="text"]').val(' ');

      }
      else {
        $('#internal-deadline input[type="text"]').val(' ');
      }
      $('#dashboard ul li').each(function (i, li) {
        $(li).css('display', 'block');
      });
    }

    // ==============================================================================================================
    // = Filtering
    // ==============================================================================================================

    var filterByCheckbox = function (text, state, location) {

      console.log("In filter function");
      console.log("Recieved - Text: " + text + " | State:" + state + " | Location: " + location);

      // Allow titles in brackets to be passed
      var escapedText = state.replace(/[\-\[\]\/\{\}\(\)\*\+\?\.\\\^\$\|]/g, "\\$&");
      var textToSearch = new RegExp(escapedText, 'i');
      var count = 0;

      console.log("Escaped text: " + escapedText);

      $('#dashboard ul li').each(function (i, li) {
        var questionText = $(li).text();

        //console.log("Search location = span." + location + " | and contains: " + state);
        console.log("Search location = #" + location + " | and contains: " + text);

        if (textToSearch.test(questionText) && $(li).has('span.' + location + ':contains("' + state + '")').length) {
        //if (textToSearch.test(questionText) && $('li:contains("' + text + '")').length){
          count++;
          $(li).css('display', 'block');
        }
        else {
          $(li).css('display', 'none');
        }
      });
    }

    var filterByDateRange = function (fromDate, toDate) {
      var counter = 0;
      $('#dashboard ul li').each(function (i, li) {
        var dateForAnswer = $(this).find('.answer-date').text();
        var mDateForAnswer = moment(dateForAnswer, "DD/MM/YYYY");
        var mFromDate = moment(fromDate, "DD/MM/YYYY");
        var mToDate = moment(toDate, "DD/MM/YYYY");

        if (mFromDate > mToDate || mToDate < mFromDate) {
          console.log("ERROR !");
        }
        else if (fromDate != '' && toDate == '' && mDateForAnswer.isAfter(mFromDate) || fromDate != '' && toDate == '' && mDateForAnswer.isSame(mFromDate)) {
          console.log("'To' date missing!");
          $(this).closest('li').css('display', 'block');
        }
        else if (fromDate == '' && toDate != '' && mDateForAnswer.isBefore(mToDate) || fromDate == '' && toDate != '' && mDateForAnswer.isSame(mToDate)) {
          console.log("'From' date is missing!");
          $(this).closest('li').css('display', 'block');
        }
        else if (fromDate != '' && toDate != '' && mDateForAnswer.isBetween(mFromDate, mToDate) || fromDate != '' && toDate != '' && mDateForAnswer.isSame(mFromDate) || fromDate != '' && toDate != '' && mDateForAnswer.isSame(mToDate)) {
          console.log("Inbetweener");
          $(this).closest('li').css('display', 'block');
          counter++;
        }
        else {
          $(this).closest('li').css('display', 'none');
        }
      });
    };

    $(document).ready(function () {

      // Get today's date
      var today = moment().format('DD/MM/YYYY').toString();

      // Need to pass keywords (text) | checkbox label (state) | Div name (location)
      $('#dashboard input[type="text"]').on('keyup', function () {
        console.log("On 'keyup' - text: " + $('#filters #pq-frame input[type="text"]').val() + " | State: " + $('#filters input[type="radio"]:checked').siblings('span').text() + " | Location: " + $(this).closest('div').attr('id'));
        filterByCheckbox(
          $('#filters input[type="text"]').val(),
          //$('#filters #pq-frame input[type="text"]').val(),
          $('#filters input[type="radio"]:checked').siblings('span').text(),
          $(this).closest('div').attr('id')
        );
      });

      $('#dashboard #filters input').on('click', function (event) {

        if ($(event.target).is('#answer-date')) {
          filterByCheckbox('answer-date', today);
        }

        if ($(event.target).is(':checked')) {
          $(event.target).siblings('input').attr('checked', false);
          console.log("On 'Click' - text: " + $('#filters input[type="text"]').val() + " | State: " + $(event.target).next().text() + " | Location: " + $(this).closest('div').attr('id'));
          filterByCheckbox(
            $('#filters input[type="text"]').val(),
            $(event.target).next().text(),
            $(this).closest('div').attr('id')
          );
        }
        else {
          console.log("On 'Else' - text: " + $('#filters input[type="text"]').val() + " | State: " + '' + " | Location: " + $(this).closest('div').attr('id'));
          filterByCheckbox(
            $('#filters input[type="text"]').val(),
            '',
            $(this).closest('div').attr('id')
          );
        }
      });

      $('.clearFilter').on('click', function (event) {
        $('.filter-box div').children('input').attr('checked', false);
        $('#filters input[type="text"]').val(' ');
        console.log("On 'Clear Filter' - text: " + $('#filters input[type="text"]').val() + " | State: " + $(event.target).next().text() + " | Location: " + $(this).closest('div').attr('id'));
        filterByCheckbox(
          $('#filters input[type="text"]').val(),
          $(event.target).next().text()
        );
      });

      // Date range filter listener:

      $('#dashboard input').change(function (event) {
        //if ($(event.target).is('#answer-to')) {
        if ($(event.target).is('#answer-from') || $(event.target).is('#answer-to')) {
          console.log('#answer-from value = ' + $('#answer-from').val());
          console.log('#answer-to value   = ' + $('#answer-to').val());
          filterByDateRange($('#answer-from').val(), $('#answer-to').val());
        }
      });

    });


