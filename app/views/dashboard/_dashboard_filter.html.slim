  #filters
    h2 Filter by
    - if @dashboard_state == "In progress" || @dashboard_state == "Backlog"
      #date-for-answer.filter-box
        h3 Date for answer
        input#answer-today type="button" value="Today"

        label.form-label for="answer_from" From
        .datepicker
          input#answer-from type="text" name="answer_from" value=""
          span.fa.fa-calendar title="select a date"

        label.form-label for="answer_to" To
        .datepicker
          input#answer-to type="text" name="answer_to" value=""
          span.fa.fa-calendar title="select a date"

        input#clear-answer-filter.clearFilter type="button" value="Clear"

      #internal-deadline.filter-box
        h3 Internal deadline
        input#deadline-today type="button" value="Today"

        label.form-label for="deadline_from" From
        .datepicker
          input type="text" name="deadline_from" value=""
          span.fa.fa-calendar title="select a date"

        label.form-label for="deadline_to" To
        .datepicker
          input type="text" name="deadline_to" value=""
          span.fa.fa-calendar title="select a date"

        input#clear-deadline-filter.clearFilter type="button" value="Clear"

    #status.filter-box
      h3 Status
      #flag

    - if @dashboard_state == "In progress" || @dashboard_state == "Backlog"
      #replying-minister.filter-box
        h3 Replying minister
        #replying-minister-list

      #policy-minister.filter-box
        h3 Policy minister
        #policy-minister-list

      #question-type.filter-box
        h3 Question type
        #question-type-list

      #keywords.filter-box
        h3 Keywords
        input.form-control type="text" name="keywords" value=""
