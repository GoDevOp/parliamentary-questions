<h1>Parliamentary Questions of the day</h1>
<h2>Today (<%= @questions.size %>)</h2>
<ul class="questions-list">
    <% @questions.each do |question| %>
        <li>
			<div>
                <div>
				    <span><%= question['Uin'] %></span>
                </div>
                <div>
				    <span class="date">Date For Answer: <%= question['DateForAnswer'].to_date.strftime('%d/%m/%Y') %></span>
                </div>

				<span><%= question['House']['HouseName'] %>:</span>
			    <span><%= question['TablingMember']['MemberName'] %></span>

                <%= link_to('Action 1', { controller: 'dashboard', action: 'detail'} , class: 'button') %>

				
			</div>
			<div class="panel-indent">
				<%= question['Text'] %>
			</div>
		</li>
    <% end %>
</ul>
<h2>Unanswered (<%= @questions.size %>)</h2>
<ul class="questions-list">
  <% @questions.each do |question| %>
      <li>
        <div>
          <div>
            <span><%= question['Uin'] %></span>
          </div>
          <div>
            <span class="date">Date For Answer: <%= question['DateForAnswer'].to_date.strftime('%d/%m/%Y') %></span>
          </div>

          <span><%= question['House']['HouseName'] %>:</span>
          <span><%= question['TablingMember']['MemberName'] %></span>

          <%= link_to('Action 1', { controller: 'dashboard', action: 'detail'} , class: 'button') %>


        </div>
        <div class="panel-indent">
          <%= question['Text'] %>
        </div>
      </li>
  <% end %>
</ul>
